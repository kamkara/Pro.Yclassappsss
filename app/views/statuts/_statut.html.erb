<div id="<%= dom_id statut %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Title:</strong>
    <%= statut.title %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Slug:</strong>
    <%= statut.slug %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">User:</strong>
    <%= statut.user_id %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this statut", statut, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this statut', edit_statut_path(statut), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
