  <% if course.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(course.errors.count, "error") %> prohibited this course from being saved:</h2>

      <ul>
        <% course.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
<%= form_with(model: course, class: "contents") do |form| %>

  <div class="my-5">
    <%= form.text_field :title,
      class: "block border border-gray-200 outline-none px-3 py-2 mt-2 w-full",
      placeholder:"Titre du contenu ...", autofocus: true %>
  </div>

  <div class="my-5 bg-white">
    <%= form.rich_text_area :content, 
    class: "block border border-gray-200 outline-none px-3 py-2 mt-2 w-full",
    placeholder:"Ecrivez le contenu ..." %>
  </div>

  <!-- Items of course-->
  <div class="flex my-4">
    <div class="w-1/3">
      <%= form.label :"Niveau" %> <br>
      <%= form.select :level_name, @levels.map{|level| [level.title]}, class: "block rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
    </div>

    <div class="w-1/3">
      <%= form.label :Matiere %> <br>
      <%= form.select :material_name, @materials.map{|material| [material.title]}, class: "block rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
    </div>

    <div class="w-1/3">
      <%= form.label :statut %> <br>
      <%= form.select :statut_name, @statuts.map{|statut| [statut.title]}, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
    </div>
  </div>

  <div class="inline">
    <%= form.submit "Enregistrez", class: " py-2 px-4 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
